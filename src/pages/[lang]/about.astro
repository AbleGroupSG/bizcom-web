---
import Layout from '~/layouts/PageLayout.astro';
import Features from "~/components/widgets/Features.astro";
import Testimonials from '~/components/widgets/Testimonials.astro';
import ContactUs from '~/components/widgets/Contact.astro';

import { getLangFromUrl, useTranslations } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const metadata = {
  title: 'About BizCom Management Services',
};
export function getStaticPaths () {
 return [
    {params: {lang: 'en', version: 'v1'}},
    {params: {lang: 'id', version: 'v1'}},
    {params: {lang: 'zh', version: 'v1'}},
  ];
}
---

<Layout metadata={metadata}>
  <Features
  id="about"
  tagline={t("about.us")}
  title={t("why.choose.bizcom")}
  subtitle={t("bizcom.service.offering")}
  items={[
    {
      title: t("business.acumen"),
      description:
        "Empowering businesses with strategic insights, expert guidance, and strong partnerships for sustainable growth and success.",
      icon: "tabler:components",
    },
    {
      title: t("cost.efficiency"),
      description:
        "Delivering cost-effective solutions to enhance value and drive sustainable business success.",
      icon: "tabler:components",
    },
    {
      title: t("industry.expertise"),
      description:
        "Bringing years of experience and deep knowledge to drive innovation across diverse industries and sectors.",
      icon: "tabler:components",
    },
    {
      title: t("professional.advice"),
      description:
        "Expert guidance rooted in industry best practices to help navigate complex business challenges with confidence.",
      icon: "tabler:components",
    },
  ]}
/>

<Testimonials
    id="testimonials"
    title={t("our.testimonials")}
    testimonials={[
      {
        testimonial: `Our financial reports and taxation since 2008 were prepared by BizCom, will continue to engage them in view of their professionalism and sincerity over the years.`,
        name: "Ms Koh Mei Yen",
        job: "Manager Poh Sien Pte Ltd",
        image: {
          src: "https://www.seekpng.com/png/small/41-410093_circled-user-icon-user-profile-icon-png.png",
          alt: "Testimoni 1",
        },
      },
      // More testimonials...
    ]}
    callToAction={{
      target: "",
      text: t("read.more.testimonials"),
      href: "/testimonials",
      icon: "tabler:chevron-right",
    }}
  />

  <ContactUs
    id="contact-us"
    title={t("drop.message")}
    subtitle={t("faq.quick.answers")}
    inputs={[
      {
        type: "text",
        name: "name",
        label: t("name"),
      },
      {
        type: "email",
        name: "email",
        label: t("email"),
      },
      {
        type: "phone",
        name: "phone",
        label: t("phone.number"),
      },
    ]}
    textarea={{
      label: t("message"),
    }}
    disclaimer={{
      label: t("contact.form.notice"),
    }}
    description={t("support.response.time")}
  />
</Layout>
