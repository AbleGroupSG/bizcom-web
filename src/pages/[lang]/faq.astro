---
import Layout from '~/layouts/PageLayout.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import ContactUs from '~/components/widgets/Contact.astro';

import { getLangFromUrl, useTranslations } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const metadata = {
  title: 'Frequently Asked Questions',
};
export function getStaticPaths () {
 return [
    {params: {lang: 'en', version: 'v1'}},
    {params: {lang: 'id', version: 'v1'}},
    {params: {lang: 'zh', version: 'v1'}},
  ];
}

---

<Layout metadata={metadata}>
    <FAQs
    id="faqs"
    title={t("frequently.asked.questions")}
    tagline={t("faq")}
    items={[
      {
        title: t("app.business.credibility"),
        description: t("app.partnering.bizcom"),
      },
      {
        title: t("app.cost.efficiency"),
        description: t("app.economical.choice"),
      },
      {
        title: t("app.industry.expertise"),
        description: t("app.team.design"),
      },
      {
        title: t("app.business.finances"),
        description: t("app.financial.planning"),
      },
      {
        title: t("app.professional.advice"),
        description: t("app.support.by.bizcom"),
      },
      {
        title: t("app.best.practices"),
        description: t("app.template.standards"),
      },
    ]}
  />
  
  <Testimonials
  id="testimonials"
  title={t("our.testimonials")}
  testimonials={[
    {
      testimonial: `Our financial reports and taxation since 2008 were prepared by BizCom, will continue to engage them in view of their professionalism and sincerity over the years.`,
      name: "Ms Koh Mei Yen",
      job: "Manager Poh Sien Pte Ltd",
      image: {
        src: "https://www.seekpng.com/png/small/41-410093_circled-user-icon-user-profile-icon-png.png",
        alt: "Testimoni 1",
      },
    },
    // More testimonials...
  ]}
  callToAction={{
    target: "",
    text: t("read.more.testimonials"),
    href: "/testimonials",
    icon: "tabler:chevron-right",
  }}
/>

<ContactUs
  id="contact-us"
  title={t("drop.message")}
  subtitle={t("faq.quick.answers")}
  inputs={[
    {
      type: "text",
      name: "name",
      label: t("name"),
    },
    {
      type: "email",
      name: "email",
      label: t("email"),
    },
    {
      type: "phone",
      name: "phone",
      label: t("phone.number"),
    },
  ]}
  textarea={{
    label: t("message"),
  }}
  disclaimer={{
    label: t("contact.form.notice"),
  }}
  description={t("support.response.time")}
/>
</Layout>
