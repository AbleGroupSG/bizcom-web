---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Features from "~/components/widgets/Features.astro";
import Testimonials from "~/components/widgets/Testimonials.astro";
import BlogLatestPosts from "~/components/widgets/BlogLatestPosts.astro";
import ContactUs from "~/components/widgets/Contact.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

const metadata = {
  title: "BizCom Management Services",
  ignoreTitleTemplate: true,
};

export function getStaticPaths() {
  return [
    { params: { lang: "en", version: "v1" } },
    { params: { lang: "id", version: "v1" } },
    { params: { lang: "zh", version: "v1" } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout metadata={metadata}>
  <Hero
    tagline={t("nav.home")}
    title="BizCom Management Services"
    )}
    subtitle={t("bizcom.services.description")}
    videoSrc="/bg2.mp4"
    content={t("bizcom.services.description")}
  />

  <Features
    id="about"
    tagline={t("about.us")}
    title={t("why.choose.bizcom")}
    subtitle={t("bizcom.service.offering")}
    items={[
      {
        title: t("business.acumen"),
        description:
          "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo.",
        icon: "tabler:components",
      },
      {
